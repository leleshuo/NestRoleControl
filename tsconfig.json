{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./compile",
    "baseUrl": "./",
    "paths":{
      "@common/*":["src/common/*"],
      "@database/*":["src/database/*"],
      "@config":["src/config"],
      "@helpers":["src/helpers"],
      "@modules/*":["src/modules/*"],
      "@admin/*":["src/modules/admin/*"],
      "@auth":["src/modules/auth/"],
      "@libs/*":["src/libs/*"],
    },
    "incremental": true
  }
}
